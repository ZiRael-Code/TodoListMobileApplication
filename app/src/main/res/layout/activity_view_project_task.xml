<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backgroud"
    tools:context=".ViewProjectTask">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#26F3DFDF"
        android:gravity="clip_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="#88C6B3FF"
            android:foreground="@drawable/square_wight"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="40dp"
                android:backgroundTint="@android:color/transparent"
                android:foreground="@drawable/arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="65dp"
                android:fontFamily="@font/arimo_bold"
                android:gravity="bottom|center"
                android:text="Project Task"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="@android:color/transparent"
                android:foreground="@android:drawable/ic_popup_reminder"
                android:foregroundTint="#8C8467" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="#F82323"
                android:translationX="-50dp"
                android:translationY="3dp" />


        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/mainTaskSelectorBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/projectsLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:background="#3DC6B3FF"
                android:foreground="@drawable/square_wight"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:translationY="0.49dp">

                <TextView
                    android:id="@+id/tasksName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:text="Office Work"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:translationY="-5dp" />

                <View
                    android:id="@+id/afterTaskDash"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/black" />

            </LinearLayout>
        </LinearLayout>
</HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:foreground="@drawable/square_wight"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                tools:srcCompat="@drawable/searchs" />

            <EditText
                android:id="@+id/searchBox"
                android:layout_width="356dp"
                android:layout_height="45dp"
                android:layout_weight="0"
                android:background="@null"
                android:ems="10"
                android:foreground="@drawable/square_wight"
                android:inputType="text"
                android:text="    Name" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="623dp"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/mainTaskBoss"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:translationY="10dp">

                <LinearLayout
                    android:id="@+id/taskBox"
                    android:layout_width="wrap_content"
                    android:layout_height="105dp"
                    android:orientation="vertical">

                    <!--                    <LinearLayout-->
